<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.finalproject.demos.mapper.ReviewMapper">
    <resultMap id="BaseResultMap" type="org.example.finalproject.demos.pojo.Review">
        <id column="id" property="id"/>
        <result column="order_id" property="orderId"/>
        <result column="user_id" property="userId"/>
        <result column="product_id" property="productId"/>
        <result column="seller_id" property="sellerId"/>
        <result column="rating" property="rating"/>
        <result column="content" property="content"/>
        <result column="images" property="images"/>
        <result column="status" property="status"/>
        <result column="reply_content" property="replyContent"/>
        <result column="reply_time" property="replyTime"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" parameterType="org.example.finalproject.demos.pojo.Review" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO reviews (
            order_id, user_id, product_id, seller_id, rating, content, images, status,
            reply_content, reply_time, create_time, update_time
        ) VALUES (
            #{orderId}, #{userId}, #{productId}, #{sellerId}, #{rating}, #{content}, #{images}, #{status},
            #{replyContent}, #{replyTime}, #{createTime}, #{updateTime}
        )
    </insert>

    <select id="selectById" parameterType="int" resultMap="BaseResultMap">
        SELECT * FROM reviews WHERE id = #{id}
    </select>

    <select id="selectByOrderId" parameterType="int" resultMap="BaseResultMap">
        SELECT * FROM reviews WHERE order_id = #{orderId} LIMIT 1
    </select>

    <select id="selectByUserId" parameterType="int" resultMap="BaseResultMap">
        SELECT * FROM reviews WHERE user_id = #{userId} ORDER BY create_time DESC
    </select>

    <select id="selectByProductId" parameterType="int" resultMap="BaseResultMap">
        SELECT * FROM reviews WHERE product_id = #{productId} AND status = 1 ORDER BY create_time DESC
    </select>

    <update id="updateById" parameterType="org.example.finalproject.demos.pojo.Review">
        UPDATE reviews
        <set>
            <if test="rating != null">rating = #{rating},</if>
            <if test="content != null">content = #{content},</if>
            <if test="images != null">images = #{images},</if>
            <if test="status != null">status = #{status},</if>
            <if test="replyContent != null">reply_content = #{replyContent},</if>
            <if test="replyTime != null">reply_time = #{replyTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM reviews ORDER BY create_time DESC
    </select>
</mapper>
