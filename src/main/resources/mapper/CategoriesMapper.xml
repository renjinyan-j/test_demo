<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="org.example.finalproject.demos.mapper.CategoriesMapper">

    <resultMap id="CategoryResultMap" type="org.example.finalproject.demos.pojo.Category">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>

    <select id="getAllCategories" resultMap="CategoryResultMap">
        SELECT id, name FROM categories ORDER BY id
    </select>

    <select id="getCategoryById" resultMap="CategoryResultMap" parameterType="Integer">
        SELECT id, name FROM categories WHERE id = #{id}
    </select>

</mapper>