<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.finalproject.demos.mapper.ChatMessageMapper">

    <resultMap id="ChatMessageResult" type="org.example.finalproject.demos.pojo.ChatMessage">
        <id property="id" column="id"/>
        <result property="conversationId" column="conversation_id"/>
        <result property="fromUserId" column="from_user_id"/>
        <result property="toUserId" column="to_user_id"/>
        <result property="content" column="content"/>
        <result property="sentAt" column="sent_at"/>
        <result property="readFlag" column="read_flag"/>
    </resultMap>

    <insert id="insertMessage" useGeneratedKeys="true" keyProperty="id">
        insert into chat_message
        (conversation_id, from_user_id, to_user_id, content, sent_at, read_flag)
        values
        (#{conversationId}, #{fromUserId}, #{toUserId}, #{content}, #{sentAt}, #{readFlag})
    </insert>

    <select id="listByConversation" resultMap="ChatMessageResult">
        select id, conversation_id, from_user_id, to_user_id, content, sent_at, read_flag
        from chat_message
        where conversation_id = #{conversationId}
        order by sent_at asc
        limit #{limit} offset #{offset}
    </select>
</mapper>


